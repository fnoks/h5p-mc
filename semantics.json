      },
      {
        "name": "lessonCompletedLabel",
        "type": "text",
        "default": "Lesson completed"
      },
      {
        "name": "skipLabel",
        "type": "text",
        "default": "Skip"
      },
      {
        "name": "continueLabel",
        "type": "text",
        "default": "Continue"
      },
      {
        "name": "maxScoreLabel",
        "type": "text",
        "default": "Max Score"
      },
      {
        "name": "scoreLabel",
        "type": "text",
        "default": "Your Score"
      },
      {
        "name": "progressLabel",
        "type": "text",
        "default": "Lessons Completed"
      },
      {
        "name": "youGotLabel",
        "type": "text",
        "default": "You Got"
      },
      {
        "name": "infoLessonLabel",
        "type": "text",
        "default": "Info Lesson"
      },
      {
        "name": "infoLessonValue",
        "type": "text",
        "default": "0 points"
      },
      {
        "name": "noScoreLabel",
        "type": "text",
        "default": "No Score"
      },
      {
        "name": "retryButtonLabel",
        "type": "text",
        "default": "Retry"
      },
      {
        "name": "summary",
        "label": "Summary page",
        "type": "group",
        "fields": [
          {
            "name": "header",
            "type": "text",
            "default": "You have completed the mini course!"
          },
          {
            "name": "overallResult",
            "type": "text",
            "default": "You won %score of %maxScore points!"
          },
          {
            "name": "lessonPrefixLabel",
            "type": "text",
            "default": "Lesson %lessonIndex"
          }
        ]
      }

    ]
  }
]
